%
% Math configuration
%

% Basic packages
\RequirePackage[intlimits]{mathtools} % intlimits: boundaries in integrals are placed under
                                    % respectively above the integral sign
\RequirePackage{amssymb}
\RequirePackage{wasysym}            % Additional symbols
\mathtoolsset{centercolon}          % Center the colon vertically
\RequirePackage{mathdots}           % Improved dots

% Draw split-level fractions
\RequirePackage{xfrac}

% Commutative diagrams with the tikz-cd package
\RequirePackage{tikz}
\usetikzlibrary{cd}

% Shortcut for epsilon
\newcommand{\eps}{\epsilon}

% Swap \epsilon and \varepsilon, \phi and \varphi
\newcommand{\@swap}[1]{
    \expandafter\let\expandafter\@tmp\csname #1\endcsname
    \expandafter\let\csname #1\expandafter\endcsname\csname var#1\endcsname
    \expandafter\let\csname var#1\endcsname\@tmp
}
\@swap{epsilon}
\@swap{phi}

% Long \to arrow
\newcommand{\longto}{\longrightarrow}

% Real and imaginary part
\let\Re\relax
\DeclareMathOperator{\Re}{Re}
\let\Im\relax
\DeclareMathOperator{\Im}{Im}

% Over- and underbrace as command in LaTeX syntax and with spacing problems fixed
\newcommand{\Overbrace}[2]{{\overbrace{#1}_{#2}}}
\newcommand{\Underbrace}[2]{{\underbrace{#1}_{#2}}}

% Less-equal and greater-equal with slanted line
\renewcommand{\le}{\leqslant}
\renewcommand{\ge}{\geqslant}

% Aliases for frequently used sets
\newcommand{\N}{\mathbb{N}} % Natural numbers
\newcommand{\Z}{\mathbb{Z}} % Integers
\newcommand{\Q}{\mathbb{Q}} % Rational numbers
\newcommand{\R}{\mathbb{R}} % Real numbers
\newcommand{\C}{\mathbb{C}} % Complex numbers
\newcommand{\K}{\mathbb{K}} % Field R or C
