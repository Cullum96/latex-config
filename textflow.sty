%
% Text flow.
%

% Options
\DeclareOption{noparindent}{                    % No paragraph indentation
    \setlength{\parindent}{0pt}
}
\DeclareOption{pargap}{                         % Gap between paragraphs
    \setlength{\parskip}{1.7\medskipamount}
}
\DeclareOption{linespacing=single}{             % Single line spacing
    \PassOptionsToPackage{singlespacing}{setspace}
}
\DeclareOption{linespacing=onehalf}{            % Onehalf line spacing
    \PassOptionsToPackage{onehalfspacing}{setspace}
}
\DeclareOption{linespacing=double}{             % Double line spacing
    \PassOptionsToPackage{doublespacing}{setspace}
}
\DeclareOption{linebreaking=fussy}{             % Fussy line breaking
    \fussy
}
\DeclareOption{linebreaking=sloppy}{            % Sloppy line breaking
    \sloppy
}
\DeclareOption*{
    \PackageWarning{textflow}{Unknown option '\CurrentOption'}
}

% By default fussy line break and single line spacing.
\ExecuteOptions{linebreak=fussy,linespacing=single}

\ProcessOptions*

% Basic packages
\RequirePackage{setspace} % Line spacing
\RequirePackage{hyphenat} % Hyphenation of words containing analphabetic characters
