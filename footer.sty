%
% Custom footer.
%

% Enable custom headers and footers (pass all options to fancyhdr)
\RequirePackageWithOptions{fancyhdr}
\pagestyle{fancy}

% Set width of footrule to 0.4pt
\renewcommand{\footrulewidth}{0.4pt}

% Redefine the \geometry command to update the footer
\renewcommand{\geometry}[1]{
    \Gm@clean
    \setkeys{Gm}{#1}
    \Gm@process
    \f@nch@setoffs
}
