%
% Theorem environments
%
% There are environments defined for:
%   Conjecture
%   Corollary
%   Definition
%   Example
%   Lemma
%   Proposition
%   Remark
%   Theorem
% In terms of numbering, all environments are on the same level, so they share the same counter.
% Furthermore, for every environment there is a variant without numbering.  This variant differs
% from the original by an appended asterisk, e.g. 'theorem*' is the unnumbered variant of
% 'theorem'.  For the 'example' and 'remark' environment, there is a plural variant available, this
% means it is named 'examples' instead of 'example'.  For further details see below.
%

% Options
\DeclareOption{filledqed}{                  % Filled square as qed symbol
    \renewcommand{\qedsymbol}{\blacksquare}
}
\DeclareOption{numbersinfront}{             % Put the numbers in front
    \swapnumbers
}
\DeclareOption*{
    \PassOptionsToPackage{\CurrentOption}{amsthm}
}

\ProcessOptions*

% Determine the language to generate language specific output
\RequirePackage{iflang}
\def\if@de{\IfLanguageName{ngerman}}

% Pull in the AMS theorems package
\RequirePackage{amsthm}

% Theorem, conjecture, corollary, lemma and proposition
\theoremstyle{plain}
\newtheorem {theorem} {\if@de{Satz}{Theorem}}
\newtheorem*{theorem*}{\if@de{Satz}{Theorem}}
\newtheorem {conjecture}[theorem]{\if@de{Vermutung}{Conjecture}}
\newtheorem*{conjecture*}        {\if@de{Vermutung}{Conjecture}}
\newtheorem {corollary}[theorem]{\if@de{Korollar}{Corollary}}
\newtheorem*{corollary*}        {\if@de{Korollar}{Corollary}}
\newtheorem {lemma}[theorem]{Lemma}
\newtheorem*{lemma*}        {Lemma}
\newtheorem {proposition}[theorem]{Proposition}
\newtheorem*{proposition*}        {Proposition}

% Definiton and example
\theoremstyle{definition}
\newtheorem {definition}[theorem]{Definiton}
\newtheorem*{definition*}        {Definiton}
\newtheorem {example}[theorem]{\if@de{Beispiel}{Example}}
\newtheorem*{example*}        {\if@de{Beispiel}{Example}}
\newtheorem {examples}[theorem]{\if@de{Beispiele}{Examples}}
\newtheorem*{examples*}        {\if@de{Beispiele}{Examples}}

% Remark
\theoremstyle{remark}
\newtheorem {remark}[theorem]{\if@de{Anmerkung}{Remark}}
\newtheorem*{remark*}        {\if@de{Anmerkung}{Remark}}
\newtheorem {remarks}[theorem]{\if@de{Anmerkungen}{Remarks}}
\newtheorem*{remarks*}        {\if@de{Anmerkungen}{Remarks}}
