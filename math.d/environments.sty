\RequirePackageWithOptions{amsthm}
\RequirePackage{iflang}
\def\if@de{\IfLanguageName{ngerman}}

\theoremstyle{plain}
\newtheorem {theorem} {\if@de{Satz}{Theorem}}
\newtheorem*{theorem*}{\if@de{Satz}{Theorem}}
\newtheorem {corollary}[theorem]{\if@de{Korollar}{Corollary}}
\newtheorem*{corollary*}        {\if@de{Korollar}{Corollary}}
\newtheorem {lemma}[theorem]{Lemma}
\newtheorem*{lemma*}        {Lemma}
\newtheorem {proposition}[theorem]{Proposition}
\newtheorem*{proposition*}        {Proposition}

\theoremstyle{definition}
\newtheorem {definition}[theorem]{Definiton}
\newtheorem*{definition*}        {Definiton}
\newtheorem {example}[theorem]{\if@de{Beispiel}{Example}}
\newtheorem*{example*}        {\if@de{Beispiel}{Example}}

\theoremstyle{remark}
\newtheorem {remark}[theorem]{\if@de{Bemerkung}{Remark}}
\newtheorem*{remark*}        {\if@de{Bemerkung}{Remark}}
