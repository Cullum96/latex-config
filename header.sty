%
% Custom header.
%

% Pass options to the fancyhdr package
\DeclareOption*{
    \PassOptionsToPackage{\CurentOption}{fancyhdr}
}

\ProcessOptions*

% Enable custom headers and footers
\RequirePackage{fancyhdr}
\pagestyle{fancy}

% Set header height and gap to body
\geometry{head=12pt,headsep=25pt}

% Set width of the headrule to 0.4pt
\renewcommand{\headrulewidth}{0.4pt}

% Redefine the \geometry command to update the header
\renewcommand{\geometry}[1]{
    \Gm@clean
    \setkeys{Gm}{#1}
    \Gm@process
    \f@nch@setoffs
}
